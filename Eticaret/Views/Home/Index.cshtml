@using EntityLayer.Concrete;
@model List<Personel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-3">
    
    <h2>Basic Table</h2>

    <a href="~/Home/Insert" class="btn btn-success">Personel ekle</a>
    
    <p>The .table class adds basic styling (light padding and horizontal dividers) to a table:</p>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>LastName</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td> 
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>